<h1>This is a profile page of <%= @user.name %></h1>
<h2>Posts:</h2>

<div class="profile-posts">
  <% @posts.each do |p| %>
    <% @comments.each do |c| %>
    <p>POST: <%= p.body %></p>
    <p>COMMENT: <%= c.body %></p>
    <% end %>
  <% end %>
</div>
<%= form_tag logout_path, method: :delete do %>
  <%= submit_tag value="Logout" %>
<% end %>
<%= link_to "Logout",  logout_path, method: :delete %>
<%= link_to "Update Profile", edit_user_path %>
<%= link_to "Delete Profile", user_path, method: :delete %>
<%=  link_to "Create a Post", new_post_path %>
